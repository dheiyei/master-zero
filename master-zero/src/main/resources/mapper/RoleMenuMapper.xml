<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lhj.mapper.role.RoleMenuMapper">

    <resultMap id="RoleMenuResultMap" type="com.lhj.model.entity.role.RoleMenu">
        <id property="roleId" column="role_id"/>
        <result property="menuId" column="menu_id"/>
    </resultMap>

    <select id="selectRoleMenuByRoleId" resultMap="RoleMenuResultMap">
        SELECT
        *
        FROM
        role_menu
        WHERE
        role_id = #{roleId}
    </select>

    <insert id="createRoleMenu">
        INSERT INTO role_menu (
        role_id,
        menu_id
        ) VALUES
        <foreach collection="menuIds" item="menuId" separator=",">
            ( #{roleId}, #{menuId} )
        </foreach>
    </insert>

    <delete id="deleteRoleMenuByRoleId">
        DELETE FROM role_menu WHERE role_id = #{roleId}
    </delete>

</mapper>